@model Auth.Service.Mail.Models.ConfirmationEmailModel;

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Confirmação de Email</title>
</head>
<body style="
      margin: 0;
      padding: 0;
      font-family: Arial, sans-serif;
      background-color: #fff;
    ">
    <table border="0"
           cellpadding="0"
           cellspacing="0"
           width="100%"
           style="max-width: 600px; background-color: #fff">
        <tr>
            <td align="center" valign="top" style="padding: 20px">
                <table border="0"
                       cellpadding="0"
                       cellspacing="0"
                       width="100%"
                       style="border-radius: 5px; background-color: rgb(94, 90, 102)">
                    <tr>
                        <td align="center" style="padding: 40px">
                            <h1 style="
                    font-family: 'DM Serif Display', serif;
                    color: #000;
                    margin: 0;
                  ">
                                Olá, @Model.Username
                            </h1>
                        </td>
                    </tr>
                    <tr>
                        <td align="center" style="padding: 0 40px 20px">
                            <p style="color: #000; font-size: 18px">
                                Obrigado por se registrar no nosso site!
                            </p>
                            <p style="color: #000; font-size: 18px">
                                Para confirmar seu e-mail, clique no botão abaixo:
                            </p>
                        </td>
                    </tr>
                    <tr>
                        <td align="center" style="padding: 0 40px 40px">
                            <a href="@Model.ConfirmationLink"
                               style="
                    display: inline-block;
                    padding: 10px 20px;
                    background-color: #ff9000;
                    color: #333131;
                    text-decoration: none;
                    font-size: 20px;
                    border-radius: 5px;
                  ">
                                Confirmar e-mail
                            </a>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
</body>
</html>